{
  "name": "@kindpanda/socketio-client",
  "version": "1.0.2",
  "license": "MIT",
  "author": "Julien Tilap LA VINH <jlavinh@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -Rf dist && NODE_ENV=production babel src --out-dir dist",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint src"
  },
  "dependencies": {
    "@kindpanda/promisify-socket": "1.0.0",
    "socket.io-client": "2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.6.2",
    "@babel/node": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "babel-eslint": "10.0.2",
    "babel-plugin-module-resolver": "3.2.0",
    "eslint": "5.9.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.0.2",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "socket.io": "2.2.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "root": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn run test"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "./src"
    ],
    "verbose": true,
    "clearMocks": true,
    "maxConcurrency": 1,
    "resetMocks": true
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
